{% extends 'base.html.twig' %}

{% block body %}
    <h1>WaterSource list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Watersourcetype</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for waterSource in waterSources %}
            <tr>
                <td><a href="{{ path('watersource_show', { 'id': waterSource.id }) }}">{{ waterSource.id }}</a></td>
                <td>{{ waterSource.waterSourceType }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('watersource_show', { 'id': waterSource.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('watersource_edit', { 'id': waterSource.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('watersource_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
