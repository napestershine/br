{% extends 'admin.html.twig' %}
{% block header %}Water Source Facilities {% endblock %}
{% block subheader %}Water Source Facilities  Details {% endblock %}
{% block content %}
    <div class="row">
        <div class="col-md-1">
            <a href="{{ path('watersource_new') }}" class="btn btn-success">Add New</a>
        </div>
    </div>
    <br/>

    <div class="panel-body">
        <div class="row form-group">
            <label for="title" class="col-md-2">Type of Water Source</label>
            <div class="col-md-10">
                {{ waterSource.waterSourceType }}
            </div>
        </div>
        <br/>
        <div class="row">
            <div class="col-md-12">
                <div class="col-md-2">
                    <a class="btn btn-primary" href="{{ path('watersource_index') }}">Back</a>
                    <a class="btn btn-info" href="{{ path('watersource_edit', { 'id': waterSource.id }) }}">Edit</a>
                </div>
                <div class="col-md-1 pull-right">

                    {{ form_start(delete_form) }}
                    <input class="btn btn-danger" type="submit" value="Delete">
                    {{ form_end(delete_form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}