{% extends 'admin.html.twig' %}
{% block header %} Water Source Facilities{% endblock %}
{% block subheader %}New Water Source Facility {% endblock %}
{% block content %}
    <div class="panel-body">
        <div class="form-horizontal">

            {{ form_start(form) }}
            <div class="form-group">
                <div class="col-md-3">Type of Water Source</div>
                <div class="col-md-6">
                    {{ form_widget(form.waterSourceType) }}
                </div>
            </div>
            <br/>
            <div class="form-group">
                <div class="col-md-2">

                    <input type="submit" value="Create" class="btn btn-success"/>
                    <a class="btn btn-primary" href="{{ path('watersource_index') }}">Back</a>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}