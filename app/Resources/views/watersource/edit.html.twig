{% extends 'admin.html.twig' %}
{% block header %} Water Source Facilities {% endblock %}
{% block subheader %}Edit Water Source Facilities {% endblock %}
{% block content %}

    <div class="panel-body">
        <div class="form-horizontal">
            {{ form_start(edit_form) }}
            <div class="form-group">
                <div class="col-md-3">Edit Water Source Type</div>
                <div class="col-md-6">
                    {{ form_widget(edit_form.waterSourceType) }}
                </div>
            </div>
            <br/>
            <div class="form-group">
                <div class="col-md-2">
                    <input class="btn btn-success" type="submit" value="Edit"/>
                    <a class="btn btn-primary" href="{{ path('watersource_index') }}">Back</a>
                </div>
                <div class="col-md-1 pull-right">
                    {{ form_start(delete_form) }}
                    <input class="btn btn-danger" type="submit" value="Delete">
                    {{ form_end(delete_form) }}
                </div>
            </div>
            {{ form_end(edit_form) }}


        </div>
    </div>
{% endblock %}
