{% extends 'base.html.twig' %}

{% block body %}
    <h1>Slider</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <th>Slider Image</th>
                <td>{{ slider.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <img src="{{ asset('uploads/sliders/' ~ slider.file) }}" />
        </li>
        <li>
            <a href="{{ path('slider_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('slider_edit', { 'id': slider.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
