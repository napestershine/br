{% extends 'admin.html.twig' %}

{% block header %}Home Sliders{% endblock %}
{% block subheader %}New Homepage Image slider{% endblock %}

{% block content %}

    <div class="panel-body">
        {{ form_start(form) }}
        <div class="form-horizontal">
            <div class="form-group">
                <label for="file" class="col-md-3">Add Image (jpg/jpeg/png)</label>
                <div class="col-md-6">
                    {{ form_widget(form.file) }}
                </div>
            </div>
            <br/>
            <div class="form-group">
                <div class="col-md-2">
                    <input type="submit" value="Add" class="btn btn-success"/>
                    <a href="{{ path('slider_index') }}" class="btn btn-primary">Back</a>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}