                var $collectionHolderPropSpec;


                var $addFloorPlanLink = $('<a href="#" class="add_floor_plan_link">Add a Floor Plan</a>');
                var $newLinkLi = $('<li></li>').append($addFloorPlanLink);



                // setup an "add a floor plan" link

                var $collectionHolder;

                $(document).ready(function () {

                    // Get the ul that holds the collection of property specification
                    $collectionHolderPropSpec=$('#post_property_propertySpecification');




                    // Get the ul that holds the collection of floor plans
                    $collectionHolder = $('#post_property_floorPlans');


                    //alert($collectionHolder);


                    // add the "add property specification" anchor and li to the tags ul
                    $collectionHolderPropSpec.append($newLinkLiPropSpec);


                    // add the "add a floor plan" anchor and li to the tags ul
                    $collectionHolder.append($newLinkLi);


                    // count the current form inputs we have (e.g. 2), use that as the new // index when inserting a new item (e.g. 2)
                    $collectionHolderPropSpec.data('index', $collectionHolderPropSpec.find(':input').length);


                    // count the current form inputs we have (e.g. 2), use that as the new // index when inserting a new item (e.g. 2)
                    $collectionHolder.data('index', $collectionHolder.find(':input').length);



