                        e.preventDefault();
                        addPropertySpecForm($collectionHolderPropSpec,$newLinkLiPropSpec);
                    });




                    $addFloorPlanLink.on('click', function(e) {

                        // prevent the link from creating a "#" on the URL
                        e.preventDefault();
                        // add a new tag form (see next code block)
                        addFloorPlanForm($collectionHolder, $newLinkLi);
                    });




                });

                function addPropertySpecForm($collectionHolderPropSpec,$newLinkLiPropSpec)
                {
                    var index = $collectionHolderPropSpec.data('index');



                    // Get the data-prototype explained earlier
                    var prototype = $collectionHolderPropSpec.data('prototype');




                    // Replace '$$name$$' in the prototype's HTML to
                    // instead be a number based on how many items we have
                    var newForm = prototype.replace(/__name__/g, index);
                    newForm=newForm.replace(/label__/g,'');



                    // increase the index with one for the next item
                    $collectionHolderPropSpec.data('index', index + 1);

                    // Display the form in the page in an li, before the "Add a tag" link li
                    var $newFormLi = $('<li></li>').append(newForm);



                    // also add a remove button, just for this example
                    $newFormLi.append('<a href="#" class="remove-tag">x</a>');

                    $newLinkLiPropSpec.before($newFormLi);

                    // handle the removal, just for this example
                    $('.remove-tag').click(function(e) {
                        e.preventDefault();

                        $(this).parent().remove();

                        return false;
                    });
