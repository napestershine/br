{% extends 'admin.html.twig' %}
{% block header %} Advertisements {% endblock %}
{% block subheader %}Advertisements Details{% endblock %}
{% block content %}

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ advertisementPackage.id }}</td>
            </tr>
            <tr>
                <th>Adname</th>
                <td>{{ advertisementPackage.adname }}</td>
            </tr>
            <tr>
                <th>Cost</th>
                <td>{{ advertisementPackage.cost }}</td>
            </tr>
            <tr>
                <th>Totalcreditperyear</th>
                <td>{{ advertisementPackage.totalcreditperyear }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{% if advertisementPackage.active %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('advertisementpackage_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('advertisementpackage_edit', { 'id': advertisementPackage.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
