{% extends 'base.html.twig' %}

{% block body %}
    <h1>PostProperty list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for postProperty in postProperties %}
            <tr>
                <td><a href="{{ path('postproperty_show', { 'id': postProperty.id }) }}">{{ postProperty.id }}</a></td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('postproperty_show', { 'id': postProperty.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('postproperty_edit', { 'id': postProperty.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('postproperty_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
