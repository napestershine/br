{% extends 'admin.html.twig' %}
{% block header %}Edit Category :: {{ category.title }}{% endblock %}
{% block content %}
    <div class="col-sm-10">
        {{ form_start(edit_form, {'attr':{'class': 'form-horizontal'}}) }}
        {{ form_errors(edit_form) }}

        <div class="form-group">
            {{ form_label(edit_form.title) }}
            <div class="col-sm-8">
                {{ form_widget(edit_form.title) }}
            </div>
            {{ form_errors(edit_form.title) }}
        </div>
        <div class="form-group">
            {{ form_label(edit_form.parent) }}
            <div class="col-sm-8">
                {{ form_widget(edit_form.parent) }}
            </div>
            {{ form_errors(edit_form.parent) }}
        </div>
        <br/><br/>
        <input class="btn btn-info" type="submit" value="Edit"/>
        <a class="btn btn-primary" href="{{ path('category_index') }}">Back</a>
        {{ form_end(edit_form) }}
        {{ form_start(delete_form) }}
        <input class="btn btn-danger pull-right" type="submit" value="Delete">
        {{ form_end(delete_form) }}
    </div>
{% endblock %}