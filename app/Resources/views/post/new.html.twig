{% extends 'admin.html.twig' %}

{% block header %}Blog Posts{% endblock %}
{% block subheader %}New Blog Post{% endblock %}

{% block content %}
    <div class="panel-body">
        <div class="form-horizontal">

            {{ form_start(form) }}
            <div class="form-group">
                <div class="col-md-3">Add Title</div>
                <div class="col-md-6">
                    {{ form_widget(form.title) }}
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">Add Content</div>
                <div class="col-md-6">
                    {{ form_widget(form.content) }}
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">Choose Category</div>
                <div class="col-md-6">
                    {{ form_widget(form.category) }}
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">Add Image (jpg/jpeg/png)</div>
                <div class="col-md-6">
                    {{ form_widget(form.file) }}
                </div>
            </div>
            <br/>
            <div class="form-group">
                <div class="col-md-2">
                    <input type="submit" value="Save" class="btn btn-success"/>
                    <a href="{{ path('post_index') }}" class="btn btn-primary">Back</a>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}